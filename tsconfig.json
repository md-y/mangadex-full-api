// This is the base tsconfig, but also the config for ESM building
{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node16",
    "module": "ES2020",
    "outDir": "./dist/esm",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": false,
    "removeComments": true
  },
  "lib": [
    "es2015",
  ],
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./**/*.cts"
  ]
}
